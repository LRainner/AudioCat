{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AudioCat",
  "version": "1.0.0",
  "identifier": "com.audiocat.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../frontend",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build --prefix ../frontend",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "AudioCat - 音频输出切换器",
        "width": 340,
        "height": 200,
        "minWidth": 320,
        "minHeight": 150,
        "maxWidth": 500,
        "maxHeight": 800,
        "resizable": false,
        "visible": true,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": true
      },
      {
        "label": "preference",
        "title": "偏好设置",
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "titleBarStyle": "Overlay",
        "url": "preference.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "mainBinaryName": "audiocat"
}
